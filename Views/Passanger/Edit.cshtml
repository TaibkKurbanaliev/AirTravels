    <div class="form-group">
        <label for="exampleInputEmail1">Текущее имя</label>
        <label for="exampleInputEmail1">@Model.FirstName</label>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Фамилия</label>
