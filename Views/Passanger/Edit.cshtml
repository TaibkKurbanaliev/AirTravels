    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Текущее Отчество</label>
        <label for="exampleInputEmail1">@Model.ThirdName</label>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Фамилия</label>
        <input asp-for="ThirdName" class="form-control" placeholder="Отчество">
    </div>
